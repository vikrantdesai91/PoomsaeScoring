<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/button_ripple">

    <item>
        <shape android:shape="rectangle">
            <!-- Rounded pill-style -->
            <corners android:radius="8dp" />

            <!-- Base fill, will be tinted when you use android:backgroundTint -->
            <solid android:color="@color/button_bg" />

            <!-- Subtle border for structure -->
            <stroke
                android:width="1dp"
                android:color="@color/button_border" />

            <!-- Comfortable touch area -->
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
        </shape>
    </item>

</ripple>
