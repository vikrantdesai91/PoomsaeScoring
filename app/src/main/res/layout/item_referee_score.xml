<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:background="@drawable/bg_border"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvRefName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Referee 1"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvRefScorePlayer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRefScorePlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:includeFontPadding="false"
        android:paddingEnd="15dp"
        android:text="0.000"
        android:paddingHorizontal="10dp"
        android:textColor="@color/score_green"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/tvRefName"
        app:layout_constraintEnd_toStartOf="@+id/tvRefScorePlayer2"
        app:layout_constraintStart_toEndOf="@+id/tvRefName"
        app:layout_constraintTop_toTopOf="@id/tvRefName" />

    <TextView
        android:id="@+id/tvRefScorePlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:includeFontPadding="false"
        android:paddingHorizontal="10dp"
        android:paddingStart="5dp"
        android:text="0.000"
        android:textColor="@color/red"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/tvRefName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvRefName" />

</androidx.constraintlayout.widget.ConstraintLayout>
